@bg1: #181818;
@bg2: #282828;
@fg1: #d8d8d8;

html, body {
    height: 100%;
    background-color: #{bg1};
    color: #{fg1};
    margin: 0;
}

body {
    display: flex;
    flex-direction: column;
    > * { padding: 1em; }
}

main {
    flex: 1 0 auto;
    width: 100%;
    max-width: 800px;
    align-self: center;
}

header, footer {
    flex-shrink: 0;
    background-color: #{bg2};
}

footer {
    text-align: right;
}

a { color: #7cafc2; }
a:visited { color: #ba8baf; }
